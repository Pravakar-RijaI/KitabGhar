@model KitabGhar.Models.CategoryModel

@{
    ViewData["Title"] = "Create";
}

   <form asp-action="Create">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
        </div>
        <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3 row p-1">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 row p-1">
                <label asp-for="DisplayOrder" class="control-label"></label>
                <input asp-for="DisplayOrder" class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-6 col-md-3">
                <input type="submit" value="Create" class="btn btn-primary" style="width:150px"/>
                </div>
                <div class="col-6 col-md-3">
                <a asp-action="Index" class="btn btn-outline-secondary form-control" style="width:200px">Back to List</a>
                </div>
            </div>
    </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
