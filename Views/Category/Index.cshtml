@model IEnumerable<KitabGhar.Models.CategoryModel>

@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">List of Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary mx-2" asp-action="Create"><i class="bi bi-plus-circle"></i> Create New Category</a>
        </div>
    </div>
</div>



<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisplayOrder)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayOrder)
            </td>
            <td>
                <a class="btn btn-primary mx-2" asp-action="Edit" asp-route-id="@item.CategoryId"><i class="bi bi-pencil-square"></i> Edit</a> |
                <a class="btn btn-danger mx-2" asp-action="Delete" asp-route-id="@item.CategoryId"><i class="bi bi-trash3"></i> Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
