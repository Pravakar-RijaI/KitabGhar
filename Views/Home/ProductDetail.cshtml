@model ProductModel

@{
    ViewData["Title"] = @Model.Title;
}

    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-dark text-uppercase fs-2">@Model.Title</h3>
                    <p class="text-warning fw-semibold mb-0">by @Model.Author</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                            Back to home
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src="@Model.ImageUrl" width="100%" class="rounded" />
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">

                        <div class="col-12 col-md-6 pb-4">
                            <span class="text-warning fs-4">@Model.Category</span>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark">ISBN : @Model.ISBN</h6>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark pb-2 fs-4">
                                Price:
                                <span class="fs-3">
                                    Rs.@Model.Price
                                </span>
                            </h6>
                        </div>
                        
                        <div class="row pl-2 my-3">
                            <p class="text-secondary lh-sm fs-4">@Model.Description</p>
                        </div>
                        <div class="row pl-2 mb-3">
                            <div class="col-md-4">
                                <div class="input-group mb-3">
                                    <span class="input-group-text bg-primary text-white border-0 fw-semibold"
                                          id="inputGroup-sizing-default">
                                        Quantity
                                    </span>
                                    <input type="number" value="1" min="1" class="form-control text-end" 
                                           aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6 pb-1">
                                    <a asp-action="ShoppingCart" class="btn btn-primary bg-gradient  w-100 py-2 text-uppercase fw-semibold" asp-route-productId="@Model.Id" >Add to Cart</a>
                                @* <form asp-controller="Payment" asp-action="CreateCheckout" method="POST">
                                    <button type="submit" id="checkout-button" class="btn btn-primary bg-gradient  w-100 py-2 text-uppercase fw-semibold" >Buy Now</button>
                                </form> *@
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
