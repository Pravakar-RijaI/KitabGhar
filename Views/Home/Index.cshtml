@{
    ViewData["Title"] = "Home Page";
}

@model List<ProductModel>

<section class="search-area">
    <form asp-controller="Home" asp-action="Index">
        <input name="searchString" type="search" class="search-box" placeholder="Search by Author, Books, ISBN" />
        <button class="search-icon" type="submit"><i class="bi bi-search"></i></button>
    </form>
    </section>
    <hr />

<div class="row pb-3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@product.ImageUrl" class="card-img-top rounded"/>
                            <div class="card-body pb-0">
                                <div class="pl-1">
                                    <p class="card-title h5 text-dark opacity-75 text-uppercase text-center"><strong>@product.Title</strong></p>
                                    <p class="card-title text-warning text-center">by @product.Author</p>
                                </div>
                            <div class="pl-1">
                                <a asp-action="ProductDetail" asp-route-productId="@product.Id" class="btn btn-primary border-0 form-control">Get Detail</a>
                            </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>