@model IEnumerable<KitabGhar.Models.ProductModel>

@{
    ViewData["Title"] = "Products";
}

<partial name="_Notification" />

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">List of Products</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary mx-2" asp-action="Create"><i class="bi bi-plus-circle"></i> Create New Product</a>
        </div>
    </div>
</div>



<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    Rs.@Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                    <a class="btn btn-primary mx-2" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a> |
                    <a class="btn btn-primary mx-2" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-layout-text-sidebar-reverse"></i> Details</a> |
                    <a class="btn btn-danger mx-2" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>